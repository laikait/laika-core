{
    "name": "laikait/laika-core",
    "description": "Laika PHP Framework Core",
    "type": "package",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Laika\\Core\\": "src/"
        },
        "files": [
            "helpers/functions.php",
            "helpers/hooks.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Laika\\Tests\\": "tests/"
        },
        "files": [
            "helpers/functions.php",
            "helpers/hooks.php"
        ]
    },
    "authors": [
        {
            "name": "Laika IT",
            "email": "strblackhawk@gmail.com"
        },
        {
            "name":"Showket Ahmed",
            "email":"riyadhtayf@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "laikait/laika-model": "^2",
        "laikait/laika-session": "^1",
        "twig/twig": "^3",
        "firebase/php-jwt": "^6",
        "aws/aws-sdk-php": "^3.275",
        "filp/whoops": "^2.18",
        "phpmailer/phpmailer": "^7.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.89",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "squizlabs/php_codesniffer": "^3.7",
        "phpcompatibility/php-compatibility": "^9.3"
    },
    "prefer-stable": true,
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit --configuration phpunit.xml.dist --colors=always --testdox"
        ],
        "lint": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
